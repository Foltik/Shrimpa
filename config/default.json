{
  "Server": {
    "port": 4433,
    "hostname": "https://shrimpa.rocks",
    "tls": true,
    "trustProxy": []
  },
  "Database": {
    "host": "mongodb://localhost:27017/shrimpa"
  },
  "Upload": {
    "path": "uploads",
    "maxSize": 134217728,
    "charset": "abcdefghijklmnopqrstuvwxyz",
    "idLength": 6
  },
  "View": {
    "inlineMimeTypes": [
      "image/*",
      "text/plain"
    ]
  },
  "User": {
    "Username": {
      "maxLength": 36,
      "restrictedChars": "\\s"
    },
    "Password": {
      "saltLength": 64,
      "hashIterations": 25000
    }
  },
  "Key": {
    "limit": 5
  },
  "Log": {
    "http": true,
    "httpLevel": "combined"
  },
  "RateLimit": {
    "enable": true,
    "login": {
      "window": 600,
      "max": 10
    },
    "register": {
      "window": 600,
      "max": 10
    },
    "api": {
      "window": 600,
      "max": 10
    }
  }
}
